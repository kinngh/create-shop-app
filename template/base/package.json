{
  "name": "create-shop-app",
  "version": "0.0.0",
  "description": "Shopify Boilerplate Code written with React, Express and Vite.",
  "author": {
    "name": "Harshdeep Singh Hura",
    "url": "https://harshdeephura.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kinngh/create-shop-app.git"
  },
  "scripts": {
    "update": "ncu -u",
    "update:url": "node devUtils/updateDashboard.mjs",
    "dev": "NODE_ENV=dev nodemon server/index.js --ignore ./client",
    "build": "vite build ./client --outDir ../dist",
    "preserve": "npm run build",
    "start": "NODE_ENV=prod node server/index.js",
    "pretty": "prettier --write .",
    "ngrok": "ngrok http 8081",
    "ngrok:auth": "ngrok auth <auth-token>",
    "shopify": "shopify",
    "s:e:create": "shopify app scaffold extension",
    "s:e:deploy": "shopify app deploy"
  },
  "dependencies": {
    "@shopify/app-bridge": "^3.4.3",
    "@shopify/app-bridge-react": "^3.4.3",
    "@shopify/app-bridge-utils": "^3.4.3",
    "@shopify/polaris": "^10.12.0",
    "@shopify/polaris-viz": "^7.10.0",
    "@shopify/shopify-api": "^5.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cryptr": "^6.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "raviger": "^4.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@shopify/app": "^3.23.0",
    "@shopify/cli": "^3.23.0",
    "@shopify/cli-kit": "^3.23.0",
    "@vitejs/plugin-react": "2.2.0",
    "ngrok": "^4.3.3",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.4.3",
    "prettier": "^2.8.0",
    "vite": "^3.2.4"
  }
}
